<h4 class="text-center pt-3 mb-5">修改支出：「{{ record.name }}」</h4>
<form action="/records/{{ record._id }}?_method=PUT" method="POST">
  <div class="input-group mb-3">
    <label for="name" class="btn btn-outline-info">名稱</label>
    <input type="text" class="form-control" name="name" id="name" value="{{ record.name }}">
  </div>
  <div class="input-group mb-3">
    <label for="merchant" class="btn btn-outline-info">店家</label>
    <input type="text" class="form-control" name="merchant" id="merchant" value="{{ record.merchant }}">
  </div>
  <div class="input-group mb-3">
    <label for="date" class="btn btn-outline-info">日期</label>
    <input type="date" class="form-control" name="date" id="date" value="{{ getFullDate record.date }}">
  </div>
  <div class="input-group mb-3">
    <label for="category" class="btn btn-outline-info">類別</label>
    <select name="category" id="category" class="form-control" required>
      <option disabled selected>請選擇類別</option>
      {{#each categories}}
      <option value="{{ this._id }}" name="{{ this.title }}"
        {{#if_equal ../record.category.title this.title}}selected{{/if_equal}}>
        {{ this.title }}</option>
      {{/each}}
    </select>
  </div>
  <div class="input-group mb-3">
    <label for="amount" class="btn btn-outline-info">金額</label>
    <input type="number" class="form-control" name="amount" id="amount" value="{{ record.amount }}">
  </div>
  <div class="text-center pb-3">
    <button type="submit" class="btn btn-dark">儲存</button>
  </div>
</form>